-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
$(function () {
	@if (ViewBag.password != null) {
		@Html.Raw("$('#password').val('" + ViewBag.password + "');");
		@Html.Raw("$('#passwordn').val('" + ViewBag.passwordn + "');");
		@Html.Raw("$('#passwordr').val('" + ViewBag.passwordr + "');");
	}
});
</script>
}
