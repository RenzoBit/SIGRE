@model IEnumerable<SIGRE.Models.TipoDatoAtributo>

@if (Model.Count() > 0) {

<table class="rvtabla">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idtipodato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idoperador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idreferencia)
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tipodato.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipodatooperador.descripcion)
        </td>
        <td>
			@if (item.idtipodato == SIGRE.Models.TipoDato.TEXTO || item.idtipodato == SIGRE.Models.TipoDato.ALFANUMERICO) {
				if (item.valorcadena == "") {
					<text>[vacío]</text>
				} else {
					@Html.DisplayFor(modelItem => item.valorcadena)
				}
			} else {
			@Html.DisplayFor(modelItem => item.tipodatoreferencia.descripcion)
			}
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.idatributo })
			@if (item.lcategoriadetalle.Count() == 0) {
			<text>|</text>
			@Html.ActionLink("Eliminar", "Delete", new { id = item.idatributo }, new { onclick = "return confirm('¿Está seguro que desea eliminar el atributo de tipo de dato seleccionado?');" })
			}
        </td>
    </tr>
}

</table>
	
}