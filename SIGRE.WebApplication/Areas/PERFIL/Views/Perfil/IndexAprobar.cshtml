@model IEnumerable<SIGRE.Models.Perfil>

@{
	ViewBag.Title = "Aprobación de Perfiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Aprobación de Perfiles</h2>

@if (Model.Count() > 0) {
	
<table class="rvtabla">
    <tr>
		<th>
			@Html.DisplayNameFor(model => model.idcentrocosto)
		</th>
        <th>
			@Html.DisplayNameFor(model => model.nombre)
		</th>
        <th>
            @Html.DisplayNameFor(model => model.costo)
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.unidadnegocio.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costo)
        </td>
        <td>
            @Html.ActionLink("Aprobar", "DeleteAprobar", new { id = item.idperfil }, new { onclick = "return confirm('¿Está seguro que desea aprobar el perfil?');" }) | 
            @Html.ActionLink("Rechazar", "DeleteAprobar", new { id = -item.idperfil }, new { onclick = "return confirm('¿Está seguro que desea rechazar el perfil?');" }) | 
            @Html.ActionLink("Ver", "EditAprobar", new { id = item.idperfil })
        </td>
    </tr>
}

</table>

} else {
	@Html.Raw("No existen más aprobaciones de perfiles pendientes")
}